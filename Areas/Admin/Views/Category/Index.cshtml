
@{
    ViewData["Title"] = "Index";
}

    <div class="pagetitle">
      <h1>Categories</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index">Dashboard</a></li>
          <li class="breadcrumb-item">Categories</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">

        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Categories</h5>
                <a asp-action="create" class="btn btn-success">
                    <i class="bx bx-plus"></i>
                </a>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
              <!-- Table with stripped rows -->
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Slug</th>
                    <th scope="col">CreatedAt</th>
                    <th scope="col">Operations</th>
                  </tr>
                </thead>
                <tbody>
                    @foreach (Category category in Model as List<Category>)
                    {
                        <tr>
                            <th scope="row">@category.Id</th>
                            <td>@category.Name</td>
                            <td>@category.Slug</td>
                            <td>@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="category" asp-action="edit" asp-route-id="@category.Id">
                                    <i class="bx bx-edit"> </i>
                                </a>
                                <a class="btn btn-danger delete" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">
                                    <i class="bx bx-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>
@section JS{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let deletes = document.querySelectorAll('.delete');
        deletes.forEach(del => {
            del.addEventListener('click', function (e) {
                e.preventDefault();
                let url = del.getAttribute('href');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(url)
                            .then(res => res.json())
                            .then(data => {
                                if (data.status) {
                                    Swal.fire(
                                        'Deleted!',
                                        data.message,
                                        'success'
                                    )
                                    setInterval(() => window.location.reload(), 1500);
                                } else {
                                    Swal.fire(
                                        'Deleted!',
                                        data.message,
                                        'error'
                                    )
                                    setInterval(() => window.location.reload(), 1500);
                                }
                            })
                    }
                })
            });
        })
    </script>
}


