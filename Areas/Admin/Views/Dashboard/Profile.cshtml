@inject UserManager<IdentityUser> userManager;
@model UserVM
@{
    ViewData["Title"] = "Profile";
    IdentityUser user = await userManager.FindByNameAsync(User.Identity.Name);
}

<div class="pagetitle">
    <h1>Profile Data</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index">Dashboard</a></li>
            <li class="breadcrumb-item">Profile</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">

        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <h5 class="card-title">Profile</h5>

                    <!-- Custom Styled Validation -->
                    <form class="row g-3 needs-validation" method="post">
                        <div class="col-md-12">
                            <label for="validationCustomUsername" class="form-label">Email</label>
                            <div class="input-group has-validation">
                                <input type="text" class="form-control" id="validationCustomUsername"
                                       aria-describedby="inputGroupPrepend" asp-for="Email" value="@user.Email">
                                <span class="invalid-feedback" style="display:block" asp-validation-for="Email">
                                </span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label for="validationCustomUsername" class="form-label">Username</label>
                            <div class="input-group has-validation">
                                <input class="form-control" id="validationCustomUsername"
                                       aria-describedby="inputGroupPrepend" asp-for="UserName" value="@user.UserName">
                                <span class="invalid-feedback" style="display:block" asp-validation-for="UserName">
                                </span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label for="validationCustomUsername" class="form-label">Old Password</label>
                            <div class="input-group has-validation">
                                <input class="form-control" id="validationCustomUsername"
                                       aria-describedby="inputGroupPrepend" asp-for="OldPassword">
                                <span class="invalid-feedback" style="display:block" asp-validation-for="OldPassword">
                                </span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label for="validationCustomUsername" class="form-label">NewPassword</label>
                            <div class="input-group has-validation">
                                <input class="form-control" id="validationCustomUsername"
                                       aria-describedby="inputGroupPrepend" asp-for="NewPassword">
                                <span class="invalid-feedback" style="display:block" asp-validation-for="NewPassword">
                                </span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label for="validationCustomUsername" class="form-label">Confirm Password</label>
                            <div class="input-group has-validation">
                                <input class="form-control" id="validationCustomUsername"
                                       aria-describedby="inputGroupPrepend" asp-for="ConfirmPassword">
                                <span class="invalid-feedback" style="display:block" asp-validation-for="ConfirmPassword">
                                </span>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </form><!-- End Custom Styled Validation -->
                </div>
            </div>
        </div>
    </div>
</section>


