@{
    ViewData["Title"] = "Index";
    int counter = 0;
}

<div class="pagetitle">
    <h1>Posts</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="post" asp-action="index">Dashboard</a></li>
            <li class="breadcrumb-item">Posts</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">

        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Post</h5>
                    <a asp-action="create" class="btn btn-success">
                        <i class="bx bx-plus"></i>
                    </a>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">Title</th>
                                <th scope="col">ShortDesc</th>
                                <th scope="col">Category</th>
                                <th scope="col">Tags</th>
                                <th scope="col">Date</th>
                                <th scope="col">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Post post in Model as List<Post>)
                            {
                                
                                <tr>
                                    <th scope="row">@(++counter)</th>
                                    <td>
                                        <img src="~/uploads/posts/@post.Image" width="70" height="70" />
                                    </td>
                                    <td>@post.Title</td>
                                    <td>@(post.ShortDesc.Length > 50 ? post.ShortDesc.Substring(0, 50) + "..." : post.ShortDesc) </td>
                                    <td>@post.Category.Name</td>
                                    <td>
                                        @(string.Join(",",post.TagPosts.Select(x=>x.Tag.Name).ToArray()))
                                    </td>
                                    <td>@post.Date.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="post" asp-action="edit" asp-route-id="@post.Id">
                                            <i class="bx bx-edit"> </i>
                                        </a>
                                        <a class="btn btn-danger delete" asp-controller="post" asp-action="delete" asp-route-id="@post.Id">
                                            <i class="bx bx-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>
@section JS{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let deletes = document.querySelectorAll('.delete');
        deletes.forEach(del => {
            del.addEventListener('click', function (e) {
                e.preventDefault();
                let url = del.getAttribute('href');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(url)
                            .then(res => res.json())
                            .then(data => {
                                if (data.status) {
                                    Swal.fire(
                                        'Deleted!',
                                        data.message,
                                        'success'
                                    )
                                    setInterval(() => window.location.reload(), 1500);
                                } else {
                                    Swal.fire(
                                        'Deleted!',
                                        data.message,
                                        'error'
                                    )
                                    setInterval(() => window.location.reload(), 1500);
                                }
                            })
                    }
                })
            });
        })
    </script>
}


